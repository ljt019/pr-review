ToolIndicator {
    height: auto;
    width: 100%;
    margin: 1 0;
    padding: 0 2;
    background: transparent;
    border: none;
    text-align: left;
    min-height: 1;
    color: $text;
}

/* Reduce spacing for inline report generation */
ToolIndicator.inline-report {
    /*
      -2 on the top removes BOTH blank lines the MessageBox leaves
      (+1 our normal top margin)  -> total gap = 0
    */
    margin: -2 0 0 0;      /* top | right | bottom | left */
}