.code-markdown, .code-syntax {
    height: auto;
    overflow-y: hidden;
    background: transparent;
    padding: 0 2 0 2;
}

.code-markdown MarkdownFence {
    max-height: 100vh;
    overflow: hidden;
    background: transparent;
    margin: 0;
    border: none;
}

.code-markdown MarkdownFence > Static {
    height: auto;
}

/* cat uses shared .agent-tool-message styles; no per-tool overrides needed here */