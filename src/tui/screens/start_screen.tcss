.main-container {
    width: 100%;
    height: 100%;
    background: $background;
}

.header {
    width: 100%;
    height: 3;
    padding: 1;
    background: $primary;
    color: $text;
    text-align: center;
    text-style: bold;
    dock: top;
}

#scroll-container {
    width: 100%;
    height: 1fr;
    background: $background;
    border: solid $primary;
    margin: 1;
    padding: 1;
}

