Screen {
    background: $background;
    align: center middle;
}

ASCIIArt {
    height: auto;
    text-align: center;
    background: $background;
}

OptionList {
    background: transparent;
    border: none;
    margin: 1 0;
    height: auto;
    
    & > .option-list--option {
        background: transparent;
        border: none;
        color: $text-muted;
        padding: 0;
    }
    
    & > .option-list--option-highlighted {
        background: transparent;
        color: $foreground;
        border: none;
    }
}

ModelSelectScreen OptionList {
    text-align: center;
    
    & > .option-list--option {
        text-align: center;
    }
    
    & > .option-list--option-highlighted {
        text-align: center;
    }
    
    & > .option-list--option-hover {
        background: transparent;
        color: $text-muted;
    }
}

ModelSelectScreen Container {
    align: center middle;
}

ModelSelectScreen Center {
    width: 100%;
    height: 100%;
}

ModelSelectScreen Vertical {
    width: auto;
    height: 100%;
    align: center middle;
}

ModelSelectScreen Label {
    width: 100%;
    text-align: center;
}

Input {
    margin: 1 0;
}


APIKeyScreen .input-container {
    background: transparent;
    border: none;
    width: 100%;  /* Make container full width */
    align: center middle;  /* Center children */
}

APIKeyScreen Container {
    align: center middle;
}

APIKeyScreen Center {
    width: 100%;
    height: 100%;
}

APIKeyScreen Vertical {
    width: auto;
    height: 100%;
    align: center middle;
    align-horizontal: center;  /* Center all children horizontally */
}

APIKeyScreen .input-wrapper {
    width: 100%;
    height: auto;
    align: center middle;  /* Center the input horizontally */
    padding: 0 0 -2 17;
    margin: 0;  /* Remove any margins */
}

APIKeyScreen Input {
    width: 50;
    margin: 0;  /* Remove input margins */
    border: none;
    background: transparent;
}

APIKeyScreen Label {
    width: 100%;
    text-align: center;
    margin: 0;  /* Remove label margins */
}

Button {
    margin-top: 1;
    width: 100%;
}

Label {
    background: transparent;
}

.instruction-text {
    background: transparent;
    color: $text-disabled;
    text-align: center;
    text-style: dim italic;
}

.main-content {
    width: 100%;
    height: 100%;
    padding: 2;
    background: transparent;
    border: none;
    text-align: center;
}

Static {
    background: transparent;
}